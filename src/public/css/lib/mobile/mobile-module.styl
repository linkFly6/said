// 通用列表页和列表项

.page
  .container
    >.content
      // 通用列表布局
      >.module-title // 列表分区标题
        padding 1.25rem 0 // 20px 0
        text-align center
        span
          font-size 1.25rem // 20px
          font-weight 200
          border-bottom 2px solid #969696
          padding-bottom .3125rem // 5px
      // 列表项
      >.lists
        >.module-item
          display block
          color #666
          margin-bottom 6px
          position relative
          text-decoration none
          .saidfont::before
            margin-right .3rem
          .item-bg
            width 100%
            height 12.5rem // 200px
            background none center center no-repeat
            background-size 150% auto
            filter brightness(.8)
          .item-context
            padding 1rem // 20px
            overflow hidden
            position relative
            h2
              font-size 1.25rem // 20px
              padding-bottom .3rem
              margin 0
              font-weight 400
            .item-music
              font-size .8125rem // 13px
              color #999
            .item-txt
              margin .3rem 0
              overflow hidden
              text-align justify
              max-height 3.125rem // 50px
              font-size .875rem // 14px
              // 2 行截断
              -webkit-line-clamp 2
              display -webkit-box
              -webkit-box-orient vertical
              -webkit-box-flex 1
              text-overflow ellipsis
            .item-footer
              color #999
              font-size .875rem // 14px
              overflow hidden
              .cate
                float left
              .pv, .date
                float right
              .date
                margin-left .5rem
      // 加载更多（下一页）
      >.module-next
        padding 0 1rem
        .button
          display block
          background #fff
          border-radius 2px
          box-shadow 0 1px 2px rgba(0, 0, 0, .2)
          color #777
          font-size .875rem
          text-align center
          margin 1rem 0
          overflow hidden
          padding .8125rem 0 // 13px 0
          span
            margin-right .5rem
          .icon-loading
            transform rotate(0deg)
            display inline-block
            animation turnAround 2s linear infinite
            @keyframes turnAround
              0%
                transform rotate(0deg)
              100%
                transform rotate(365deg)
// 全局通用的查看更多按钮
.module-more
  a
    padding 1rem
    display block
    text-align center
    span
      padding-bottom .3rem
      border-bottom 1px solid rgba(64, 120, 192, 0.25)