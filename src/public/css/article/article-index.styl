$layoutWidth = 825px

.said-content
  width $layoutWidth
  position relative
  // 每篇文章
  .item
    &:first-child
      margin-top 3rem
    margin 5rem 0
    // 左侧海报
    position relative
    .image
      position absolute
      overflow hidden
      width 50%
      left 0
      top 0
      height 100%
      display block
      background-position center
      background-repeat no-repeat
      background-size cover
    // 右侧内容
    .context
      margin-left 50%
      padding 0 1.4rem 0 2rem
      // 标题
      .title
        margin 0
        a
          display block
          font-size 2rem
          font-weight 200
          color #666
          line-height 1.2
          letter-spacing 0
          text-align center
          &:hover
            color #43b4ef
      // 简述
      .summary
        overflow hidden
        padding .8rem 0 1rem
        height 9.7rem
        .preview
          padding-left 2rem
          border-left 3px solid #b0d7fe
          margin auto
          p
            margin 0
            text-align justify
            word-break break-all
      // 唱片
      .footer
        text-align left
        overflow hidden
        padding-top .5rem
        position relative
        .music
          display inline-block
          middle()
            display inline-block
            vertical-align middle
          .music-image
            middle()
            padding 2px
            border 1px solid #ccc
            overflow hidden
            border-radius 50%
            position relative
            .music-ring
              background-color #fff
              border-radius 50%
              height 25%
              left 38%
              position absolute
              top 38%
              width 25%
            img
              display block
              height 7rem
              width 7rem
              border-radius 50%
          .music-info
            width 20rem
            middle()
            margin 0
            padding-left 1.5rem
            list-style none
        // 时间
        .more
          position absolute
          right 0
          bottom 3px
          i
            &::before
              padding 0 .2rem
            margin-right .8rem
            color #888
            font-size 1rem
          time
            background-color #999
            border-radius .6rem
            color #fff
            font-size 13px
            padding .1rem .9rem
  // 翻页
  .page
    text-align center
    $color-active = #75b4f4
    $color-link = #dfdfdf
    active()
      color #fafafa
      background $color-active
    a, span
      background $color-link
      border-radius 3px
      padding .4rem .8rem
      margin-left .4rem
      transition .2s
      color #444
    a
      position relative
      &:hover
        active()
        &.pre::before
          border-right-color $color-active
        &.next::before
          border-left-color $color-active
      // 上一页/下一页 箭头
      &.pre, &.next
        &::before
          transition .2s
          border .9rem solid transparent;
          position absolute
          content ''
          top 0
      &.pre::before
        left -1.7rem
        border-right-color #dfdfdf
      &.next::before
        right -1.7rem
        border-left-color #dfdfdf
    span
      active()