{
  "name": "said",
  "version": "0.0.1",
  "description": "said 采用 node 技术架构重写",
  "repository": {
    "type": "git",
    "url": "git@github.com:linkFly6/said.git"
  },
  "author": "linkFly6@live.com",
  "license": "GPL",
  "scripts": {
    "dev": "npm run build:dev && npm run watch",
    "build:dev": "npm run build-ts && npm run tslint && npm run copy-static-assets && npm run build-stylus",
    "build": "npm run build-ts:production && npm run tslint && npm run copy-static-assets && npm run build-stylus",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Stylus,Gulp,TypeScript,Node\" -c \"bgMagenta.white.bold,bgCyan.white.bold,bgBlue.white.bold,bgGreen.white.bold\" \"npm run watch-stylus\" \"npm run watch-static\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc --locale zh-CN",
    "build-ts:production": "tsc --locale zh-CN --sourceMap false",
    "watch-ts": "tsc -w",
    "build-stylus": "stylus src/public/css/** --out dist/public/css --compress",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-static": "gulp",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "watch-stylus": "stylus -w src/public/css/** --out dist/public/css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Stylus,TypeScript,Node\" -c \"bgMagenta.white.bold,bgBlue.white.bold,bgGreen.white.bold\" \"npm run watch-stylus\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "async": "^2.1.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-device": "^0.4.2",
    "express-session": "^1.14.2",
    "express-validator": "^4.3.0",
    "fbgraph": "^1.3.0",
    "fs-extra": "^5.0.0",
    "highlight.js": "^9.12.0",
    "jsonwebtoken": "^8.1.0",
    "letsencrypt-express": "^2.0.6",
    "lodash": "^4.17.4",
    "lusca": "^1.4.1",
    "marked": "^0.3.12",
    "moment": "^2.20.1",
    "mongoose": "^4.6.6",
    "multer": "^1.3.0",
    "musicmetadata": "^2.0.5",
    "nodemailer": "^2.6.4",
    "passport": "0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-beta6",
    "qiniu": "^7.1.2",
    "reflect-metadata": "^0.1.10",
    "request": "^2.78.0",
    "transliteration": "^1.6.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/runtime": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@types/async": "^2.0.40",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.2",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.32",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/fs-extra": "^5.0.0",
    "@types/highlight.js": "^9.12.2",
    "@types/jquery": "^2.0.41",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/lodash": "^4.14.63",
    "@types/log4js": "^2.3.5",
    "@types/marked": "^0.3.0",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^2.1.43",
